{
  "name": "ap-lib/error-node",
  "description": "A simple and lightweight PHP library for handling structured error messages, useful for validation, data processing, and API responses",
  "type": "library",
  "homepage": "https://github.com/ap-lib/error-node",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Anton Panfilov"
    }
  ],
  "autoload": {
    "psr-4": {
      "AP\\ErrorNode\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AP\\ErrorNode\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.3",
    "ext-mbstring": "*",
    "ap-lib/context": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "10.5.*"
  }
}